<Window x:Class="PIVLab8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PIVLab8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox Text="{Binding RepeatedPassword}" Margin="286,169,375,217"/>
        <TextBox Text="{Binding Password}" RenderTransformOrigin="-0.292,-0.56" Margin="285,119,375,269"/>
        <TextBox Text="{Binding Login}" Margin="285,70,375,318"/>
        <Label Content="Powtórz hasło" Width="120" Margin="161,169,511,217"/>
        <Label Content="Hasło" Width="120" Margin="164,119,508,269"/>
        <Label Content="Login" Width="120" Margin="164,70,508,305"/>
        <CheckBox Content="Teams" Width="120" Height="30" Margin="285,247,395,137" IsChecked="{Binding TermsAccepted}"/>
        <DatePicker Margin="285,274,375,115" Height="30" SelectedDate="{Binding BirthDate}"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="285,352,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.782,-1.501" Width="132" Height="32" Click="Button_Click"/>

    </Grid>
</Window>
